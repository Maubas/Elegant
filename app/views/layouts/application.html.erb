<!DOCTYPE html>
<html>
  <head>
    <title>Elegant</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <ul class="navigation">
      <h1 class="site-title"><a href="/">elegant.li</a></h1>
      <h2 class="version-num">v0.0.1</h2>

      <% if current_user %>
        <li class="nav-item">Signed in as <%= current_user.name %></li>
        <li class="nav-item"><%= link_to "Logout", '/logout' %></li>
      <% else %>
        <li class="nav-item"><%= link_to 'Login', '/login' %></li>
        <li class="nav-item"><%= link_to 'Signup', '/signup' %></li>
      <% end %>
      <li class="nav-item"><a href="#">About</a></li>
      <li class="nav-item"><a href="#">Contact</a></li>
    </ul>

    <input type="checkbox" id="nav-trigger" class="nav-trigger" />
    <label for="nav-trigger"></label>

    <div class="site-wrap">
      <div class="inner-wrap">
        <%= yield %>
      </div>
    </div>
  </body>
</html>